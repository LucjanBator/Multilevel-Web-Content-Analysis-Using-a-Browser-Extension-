{
  "manifest_version": 3,
  "name": "Page Parser Pro",
  "version": "1.0",
  "description": "Advanced page content parser",
  "action": {
    "default_popup": "extension-ui/dist/extension-ui/index.html",
    "default_icon": {
      "16": "extension/assets/icon-16.png",
      "48": "extension/assets/icon-48.png",
      "128": "extension/assets/icon-128.png"
    }
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["extension/content-scripts/content.js"]
  }],
  "background": {
    "service_worker": "extension/background/background.js",
    "type": "module"
  },
  "web_accessible_resources": [{
    "resources": ["extension-ui/dist/extension-ui/*"],
    "matches": ["<all_urls>"]
  }]
}