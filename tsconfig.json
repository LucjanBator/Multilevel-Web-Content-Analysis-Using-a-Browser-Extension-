{
  "compilerOptions": {
    "types": ["chrome"],
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "node"
  },
  "include": ["extension/**/*.ts"],
  "exclude": ["node_modules"]
}